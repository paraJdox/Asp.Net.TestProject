@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-xs-10">
            @*button*@
            <button id="btnclick" type="button">Click For Login</button>

            @*modal*@
            <div class="modal fade" id="login">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        @*modal header*@
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">
                                x
                            </button>

                            <h4 class="modal-title">Login</h4>
                        </div>

                        @*modal body*@
                        <div class="modal-body">
                            <form>
                                <div class="form-group">
                                    <input class="form-control" type="text" placeholder="Username" id="usrnametxt" />
                                </div>

                                <div class="form-group">
                                    <input class="form-control" type="password" placeholder="Password" id="passwordtxt" />
                                </div>

                            </form>
                        </div>

                        @*modal footer*@
                        <div class="modal-footer">
                            <button type="submit" class="btn-primary btn-primary">Login</button>
                            <button type="button" id="HidebtnModal" class="btn-primary btn-primary">Hide</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script type="text/javascript">
    $(document).ready(()=>{
        $('#btnclick').click(()=>{
            $('#login').modal('show');
        });

        $('#HidebtnModal').click(()=>{
            $('#login').modal('hide');
        });
    });
</script>
}